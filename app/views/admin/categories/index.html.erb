<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <% @categories.each do |category| %> 
    <ul class="list-group">
      <li class="list-group-item">
        <span class="badge">Number of products in category: <%= @product_count[category.id] || 0 %> </span>    
        <%= category.name %> 
      </li>
    </ul>
  <% end %>


</section>